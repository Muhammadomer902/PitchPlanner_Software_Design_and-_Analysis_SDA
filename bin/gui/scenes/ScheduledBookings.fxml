<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="gui.controllers.ScheduledBookingsController"
            style="-fx-background-image: url('/gui/assets/bg4.jpg'); 
                   -fx-background-size: cover; 
                   -fx-background-position: center; 
                   -fx-padding: 20px;">

    <!-- Top Section -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Pitch Planner" 
                   style="-fx-font-size: 30px; 
                          -fx-font-weight: bold; 
                          -fx-text-fill: white; 
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0.8, 2, 2);" />
            <Label text="Scheduled Bookings" 
                   style="-fx-font-size: 24px; 
                          -fx-font-weight: bold; 
                          -fx-text-fill: white; 
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0.8, 2, 2);" />
        </VBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px;">
            <Label text="Select Ground:" style="-fx-font-size: 16px; -fx-text-fill: white;" />
            <ComboBox fx:id="groundComboBox" promptText="Select Ground" style="-fx-pref-width: 300px;" />

            <TableView fx:id="bookingsTable" maxWidth="850" 
                       style="-fx-background-color: rgba(255,255,255,0.8); -fx-border-radius: 10px; 
                              -fx-background-radius: 10px; -fx-padding: 10px;">
                <columns>
                    <TableColumn fx:id="bookingIdColumn" text="Booking ID" prefWidth="100" />
                    <TableColumn fx:id="playerNameColumn" text="Player Name" prefWidth="150" />
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120" />
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="120" />
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom Section -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
            <Button fx:id="backButton" text="Back" 
                    style="-fx-background-color: #FF6347; -fx-text-fill: white; 
                           -fx-font-size: 14px; -fx-padding: 10px; 
                           -fx-border-radius: 5px; -fx-background-radius: 5px;" 
                    onAction="#handleBack" />
        </VBox>
    </bottom>
</BorderPane>
